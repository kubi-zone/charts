{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Values",
    "type": "object",
    "required": [
        "image",
        "apiKey"
    ],
    "properties": {
        "image": {
            "description": "Container Image",
            "properties": {
                "repo": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "apiKey": {
            "description": "Cloudflare API Key",
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]{40}$"
        }
    }
}